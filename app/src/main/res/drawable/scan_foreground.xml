<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/alpha_80_bg_color" /> <!--边框的颜色-->
            <!-- 边框底部两个角都是有弧度的 -->
            <corners android:radius="0dp"/> <!--里面的角度  如果是矩形  不用管 默认即可-->
        </shape>
    </item>

    <item android:width="@dimen/scan_rectangle_size" android:height="@dimen/scan_rectangle_size" android:gravity="center"> <!--设置边框-->
        <shape>
            <corners android:radius="0dp"/>  <!--外面的角度 矩形也不用管-->
            <stroke android:width="2dp" android:color="@color/widget_color" /> <!--里面的颜色-->
        </shape>
    </item>
</layer-list>