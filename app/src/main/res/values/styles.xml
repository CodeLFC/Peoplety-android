<resources>
    <!--==============================底部对话框样式=====================-->
    <!--主页右上角弹出菜单样式-->
    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
    <!--自定义弹出对话框-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@color/widget_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="navigation" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="android:textColorSecondary">@color/deep_text_color</item>
    </style>
</resources>
