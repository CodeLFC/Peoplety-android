<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_big_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/widget_color"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/widget_margin">

        <LinearLayout
            android:id="@+id/fragment_message_view_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/logo_size"
                android:layout_height="@dimen/logo_size"
                android:padding="@dimen/widget_margin"
                android:src="@drawable/comment" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/comment"
                android:textColor="@color/deep_text_color"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_message_view_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/logo_size"
                android:layout_height="@dimen/logo_size"
                android:padding="@dimen/widget_margin"
                android:src="@drawable/friends" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/new_fans"
                android:textColor="@color/deep_text_color"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="开发中..."
        android:gravity="center"
        android:textColor="@color/deep_text_color"
        android:textSize="@dimen/font_size_slogan"/>
</LinearLayout>