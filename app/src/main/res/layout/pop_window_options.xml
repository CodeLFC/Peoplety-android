<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/alpha_50_bg_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radius_with_header_bg"
        android:layout_marginVertical="100dp"
        android:layout_marginHorizontal="50dp"
        android:paddingTop="@dimen/activity_margin">

        <gaozhi.online.peoplety.ui.widget.NoAnimatorRecyclerView
            android:id="@+id/pop_window_recycler_options"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/widget_margin"
            />
    </LinearLayout>
</LinearLayout>