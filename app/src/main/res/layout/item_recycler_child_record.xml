<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:padding="@dimen/activity_margin"
    android:background="@drawable/rectangle_bg"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_recycler_child_record_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textColor="@color/deep_text_color"
                    android:textSize="@dimen/font_size_title" />
                <TextView
                    android:id="@+id/item_recycler_child_record_text_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_margin"
                    android:background="@drawable/tag_bg"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/widget_margin"
                    android:text="@string/parent_record"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_small" />
                <TextView
                    android:id="@+id/item_recycler_child_record_text_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_margin"
                    android:background="@drawable/tag_bg"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/widget_margin"
                    android:text="@string/record_url"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_small" />
                <TextView
                    android:id="@+id/item_recycler_child_record_text_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_margin"
                    android:background="@drawable/tag_bg"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/widget_margin"
                    android:text="@string/ip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_small" />
                <ImageView
                    android:id="@+id/item_recycler_child_record_image_top"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/top" />
        </LinearLayout>
        <TextView
            android:id="@+id/item_recycler_child_record_text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/widget_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/font_size_general" />

</LinearLayout>