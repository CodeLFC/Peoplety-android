<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_color"
    android:orientation="vertical"
    tools:context=".ui.activity.record.RecordDetailActivity">

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_big_size" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/record_detail_activity_view_record_item"
                layout="@layout/item_recycler_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/record_detail_activity_text_record_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center"
                android:text="@string/related_record"
                android:textColor="@color/deep_text_color"
                android:textSize="@dimen/font_size_small" />

            <gaozhi.online.peoplety.ui.widget.NoAnimatorRecyclerView
                android:id="@+id/record_detail_activity_recycler_parent_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/record_detail_activity_text_comment_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:gravity="center"
                android:text="@string/comment"
                android:textColor="@color/deep_text_color"
                android:textSize="@dimen/font_size_small" />
            <gaozhi.online.peoplety.ui.widget.NoAnimatorRecyclerView
                android:id="@+id/record_detail_activity_recycler_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>