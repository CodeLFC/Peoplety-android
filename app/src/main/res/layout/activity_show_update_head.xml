<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_big_size"
        layout="@layout/layout_title"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/shallow_text_color"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="@string/tip_drag_crop_head"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_gravity="center"
        />
    <gaozhi.online.peoplety.ui.widget.CropPhotoView
        android:background="@color/bg_color"
        android:id="@+id/update_head_activity_image_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:layout_gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        />
    <Button
        android:id="@+id/update_head_activity_btn_upload"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_big_height"
        android:text="@string/upload_head"
        android:textSize="@dimen/font_size_general"
        android:layout_margin="@dimen/activity_margin"
        />
</LinearLayout>