<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    >
   <ImageView
       android:id="@+id/item_recycler_selected_img_img"
       android:layout_width="@dimen/logo_bigger_size"
       android:layout_height="@dimen/logo_bigger_size"
       android:scaleType="centerCrop"
       android:src="@drawable/default_head"
       android:layout_gravity="center"
       />
   <TextView
       android:id="@+id/item_recycler_selected_img_text"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:text="@string/tip_upload_fail"
       android:textColor="@color/widget_color"
       android:textSize="@dimen/font_size_general"/>
</FrameLayout>