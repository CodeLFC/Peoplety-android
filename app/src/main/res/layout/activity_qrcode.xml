<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".ui.activity.userinfo.QRCodeActivity">

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_big_size" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:background="@drawable/radius_widget_bg"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/widget_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/qrcode_activity_image_head"
                android:layout_width="@dimen/logo_big_size"
                android:layout_height="@dimen/logo_big_size"
                android:src="@drawable/app_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/widget_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/qrcode_activity_text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_title" />

                    <ImageView
                        android:id="@+id/qrcode_activity_image_gender"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_marginHorizontal="@dimen/widget_margin"
                        android:src="@drawable/other_gender" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/widget_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/qrcode_activity_text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/widget_margin"
                        android:background="@drawable/tag_bg"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/widget_margin"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/qrcode_activity_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/widget_margin"
                        android:background="@drawable/tag_bg"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/widget_margin"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/qrcode_activity_text_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/widget_margin"
                        android:background="@drawable/tag_bg"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/widget_margin"
                        android:text="@string/app_name"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/qrcode_activity_image_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_margin"
            android:src="@drawable/app_logo" />

        <TextView
            android:layout_margin="@dimen/widget_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tip_scan_my_qr_code"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/font_size_general" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2" />
</LinearLayout>