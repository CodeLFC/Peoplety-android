<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/activity_margin"
    android:paddingVertical="@dimen/widget_margin">

    <ImageView
        android:id="@+id/item_recycler_msg_image_head"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:src="@drawable/app_logo"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/widget_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_recycler_msg_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/widget_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/deep_text_color"
            android:textSize="@dimen/font_size_title" />

        <TextView
            android:id="@+id/item_recycler_msg_text_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/font_size_general" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_recycler_msg_image_unread"
        android:layout_width="@dimen/icon_size_smaller"
        android:layout_height="@dimen/icon_size_smaller"
        android:layout_marginStart="2dp"
        android:src="@drawable/red_dot" />
</LinearLayout>