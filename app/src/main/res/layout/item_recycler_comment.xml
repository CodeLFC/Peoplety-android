<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rectangle_bg"
    android:paddingVertical="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/widget_margin"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/activity_margin">

        <ImageView
            android:id="@+id/item_recycler_comment_image_head"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:src="@drawable/app_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/widget_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_recycler_comment_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/widget_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textColor="@color/deep_text_color"
                    android:textSize="@dimen/font_size_general" />

                <ImageView
                    android:id="@+id/item_recycler_comment_image_gender"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_marginEnd="@dimen/widget_margin"
                    android:src="@drawable/other_gender" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_recycler_comment_text_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/font_size_general" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_recycler_comment_image_delete"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_gravity="end|center"
            android:src="@drawable/bin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/widget_margin"
        android:gravity="center|start">
        <TextView
            android:id="@+id/item_recycler_comment_text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/widget_margin"
            android:background="@drawable/tag_bg"
            android:gravity="center"
            android:paddingHorizontal="@dimen/widget_margin"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_small" />
        <TextView
            android:id="@+id/item_recycler_comment_text_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/widget_margin"
            android:background="@drawable/tag_bg"
            android:gravity="center"
            android:paddingHorizontal="@dimen/widget_margin"
            android:text="@string/record_url"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_small" />
        <TextView
            android:id="@+id/item_recycler_comment_text_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/widget_margin"
            android:background="@drawable/tag_bg"
            android:gravity="center"
            android:paddingHorizontal="@dimen/widget_margin"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_small"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_recycler_comment_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/edit_padding"
        android:text="@string/app_name"
        android:textColor="@color/deep_text_color"
        android:textSize="@dimen/font_size_general" />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/widget_margin"
         android:gravity="center|start">
         <TextView
             android:id="@+id/item_recycler_comment_text_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="@string/app_name"
             android:textColor="@color/shallow_text_color"
             android:textSize="@dimen/font_size_small" />
         <View
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_weight="1"/>
         <TextView
             android:id="@+id/item_recycler_comment_text_floor"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:text="1"
             android:textColor="@color/shallow_text_color"
             android:textSize="@dimen/font_size_small" />
     </LinearLayout>
</LinearLayout>