<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/widget_color"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/activity_margin"
    android:layout_marginVertical="1dp">

    <ImageView
        android:id="@+id/conversation_friend_head"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/default_img_head" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="@dimen/widget_margin"
        android:paddingLeft="@dimen/widget_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/conversation_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/app_name"
                android:textColor="@color/deep_text_color"
                android:textSize="@dimen/font_size_title" />

            <TextView
                android:id="@+id/conversation_friend_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/font_size_general" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/conversation_friend_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/app_name"
                android:textColor="@color/shallow_text_color"
                android:textSize="@dimen/font_size_general" />

            <TextView
                android:id="@+id/conversation_friend_unread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:textColor="@color/red"
                android:textSize="@dimen/font_size_general" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>