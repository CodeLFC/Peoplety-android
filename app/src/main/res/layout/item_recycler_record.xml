<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/widget_margin"
    android:background="@drawable/rectangle_bg"
    android:gravity="center|start"
    android:orientation="vertical"
    android:paddingVertical="@dimen/widget_margin">

    <include
        android:id="@+id/item_recycler_record_friend_info_view"
        layout="@layout/item_recycler_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bg"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/activity_margin"
        android:paddingVertical="@dimen/widget_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_recycler_record_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/widget_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/deep_text_color"
                android:textSize="@dimen/font_size_title" />

            <ImageView
                android:id="@+id/item_recycler_record_image_top"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:src="@drawable/top" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/item_recycler_record_image_delete"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:layout_gravity="end"
                android:src="@drawable/bin" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_recycler_record_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_margin"
            android:background="@drawable/underline_bg_1dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/font_size_general" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_margin"
            android:gravity="center|start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_recycler_record_text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/widget_margin"
                android:background="@drawable/tag_bg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/widget_margin"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/item_recycler_record_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/widget_margin"
                android:background="@drawable/tag_bg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/widget_margin"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/item_recycler_record_text_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/widget_margin"
                android:background="@drawable/tag_bg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/widget_margin"
                android:text="@string/parent_record"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/item_recycler_record_text_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/widget_margin"
                android:background="@drawable/tag_bg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/widget_margin"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_recycler_record_text_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/widget_margin"
                android:background="@drawable/tag_bg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/widget_margin"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small"
                android:visibility="visible" />

            <TextView
                android:id="@+id/item_recycler_record_text_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/widget_margin"
                android:background="@drawable/tag_bg"
                android:gravity="center"
                android:paddingHorizontal="@dimen/widget_margin"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_recycler_record_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="@string/app_name"
            android:textColor="@color/deep_text_color"
            android:textSize="@dimen/font_size_general" />

        <gaozhi.online.peoplety.ui.widget.NoAnimatorRecyclerView
            android:id="@+id/item_recycler_record_recycler_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/widget_margin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/widget_margin"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/activity_margin">

        <TextView
            android:id="@+id/item_recycler_record_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/widget_margin"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/font_size_small" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/item_recycler_record_image_link"
            android:layout_width="@dimen/icon_size_general"
            android:layout_height="@dimen/icon_size_general"
            android:layout_marginEnd="@dimen/activity_margin"
            android:src="@drawable/link" />

        <ImageView
            android:id="@+id/item_recycler_record_image_comment"
            android:layout_width="@dimen/icon_size_general"
            android:layout_height="@dimen/icon_size_general"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/item_recycler_record_text_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/font_size_small" />

        <ImageView
            android:id="@+id/item_recycler_record_image_fork"
            android:layout_width="@dimen/icon_size_general"
            android:layout_height="@dimen/icon_size_general"
            android:src="@drawable/fork_record" />

        <TextView
            android:id="@+id/item_recycler_record_text_fork_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/font_size_small" />

        <ImageView
            android:id="@+id/item_recycler_record_image_favorite"
            android:layout_width="@dimen/icon_size_general"
            android:layout_height="@dimen/icon_size_general"
            android:src="@drawable/favorite" />

        <TextView
            android:id="@+id/item_recycler_record_text_favorite_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>

