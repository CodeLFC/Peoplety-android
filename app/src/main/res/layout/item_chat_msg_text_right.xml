<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/widget_margin"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/logo_size"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_item_right_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_text_send"
            android:text="@string/app_name"
            android:textColor="@color/deep_text_color"
            android:textSize="@dimen/font_size_general" />

        <TextView
            android:id="@+id/chat_item_right_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:text="@string/app_name"
            android:textColor="@color/shallow_text_color"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>

    <ImageView
        android:id="@+id/chat_item_right_img_head"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:padding="@dimen/edit_padding"
        android:src="@drawable/default_img_head" />
</LinearLayout>